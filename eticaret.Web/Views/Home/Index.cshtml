@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        <vc:categories-list/>
    </div>
    <div class="col-md-9">

        @if(Model.Products.Count()==0)
        {
            <p>Urun bulunamadÄ±</p>
        }
        
        @foreach (var p in Model.Products)
        {
            <div class="card card-outline-secondary mb-2 p-2">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@p.Name</h4>
                        <p>@p.Description</p> 
                       </div>
                      <div>
                        <span class="badge rounded-pill text-bg-danger">@p.Price TL</span>
                        <p></p>
                      </div>
                </div>
               
                
            </div>
        }
        
        <div
             page-model="@Model.PageInfo"
             page-action="Index" 
             page-class="btn"
             page-class-link="btn-outline-primary"
             page-class-active="btn-primary"
             class="btn-group m-1">
        </div>
    </div>
</div>
